<h3>投稿編集</h3>

<%= form_with model: @post do |f| %>
    <table>
        <tr>
            <th><%= f.label :content, "投稿内容" %></th>
            <td><%= f.text_area :content, class:"post-content" %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "編集を完了する" %></li>
            <li><%= link_to "料理一覧表に戻る", :cooks %></li>
            <li><%= link_to "投稿の一覧表に戻る", posts_path %></li>
        </ul>
    </div>
<% end %>