<% if user_signed_in? %>
  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
  <%= link_to '投稿ページへ', new_post_path %>
<% else %>
  <%= link_to 'ログイン', new_user_session_path %>
  <%= link_to '新規登録', new_user_registration_path %>
<% end %>

<h3>投稿一覧表</h3>
<table>
    <thead>
        <tr>
            <th>投稿内容</th>
            <th>投稿日時</th>
            <th>更新日</th>
            <th>投稿者</th>
            <th>参照</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.content %></td>
                <td><%= post.created_at.to_s(:datetime_jp) %></td>
                <td><%= post.updated_at.to_s(:datetime_jp) %></td>
                <td><%= post.user_id %></td>
                <td>
                    <%= link_to "参照", post %>
                </td>
                <td>
                    <%= link_to "編集", [:edit, post] %>
                </td>
                <td>
                    <%= link_to "削除", post, method: :delete, data: {confirm: "本当に削除しますか?"} %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to "料理の一覧表" , cooks_path %></p>
