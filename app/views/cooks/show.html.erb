<h3>料理の詳細ページ</h3>

<table>
    <tr>
        <th>料理名</th>
        <td><%= @cook.name %></td>
    </tr>
    <tr>
        <th>作る際のポイント</th>
        <td><%= @cook.poin %></td>
    </tr>
    <tr>
        <th>材料</th>
        <td><%= @cook.ingredient %></td>
    </tr>
    <tr>
        <th>作り方</th>
        <td><%= @cook.recipe %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "料理の一覧表の戻る", cooks_path %></li>
        <li><%= link_to "投稿一覧表に戻る", posts_path %></li>
    </ul>
</div>

<h3>新規投稿</h3>
 
    <%= form_with model: @post do |f| %>
      <table>
        <tr>
          <th><%= f.label :content, "投稿内容" %></th>
          <td><%= f.text_area :content, class:"posts-content" %></td>
        </tr>
      </table>
      <%= f.hidden_field :cook_id, value: @cook.id %>
      <%= f.hidden_field :user_id, value: @user_id %>
      <div>
        <ul>
          <li><%= f.submit "投稿を完了する"%></li>
        </ul>
      </div>
    <% end %>
 

<h3>投稿一覧表</h3>

<table>
    <thead>
        <tr>
            <th>投稿内容</th>
            <th>更新日時</th>
            <th>投稿日時</th>
            <th>投稿者</th>
        </tr>
    </thead>
    
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.content %></td>
                <td><%= post.updated_at.to_s(:datetime_jp) %></td>
                <td><%= post.created_at.to_s(:datetime_jp) %></td>
                <td><%= post.user_id %></td>
            </tr>
        <% end %>
    </tbody>
</table>

